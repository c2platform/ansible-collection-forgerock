[Unit]
SourcePath={{ ds_home_link }}/bin
Description=Config DS server
Before=runlevel5.target shutdown.target
After=
Conflicts=shutdown.target

[Service]
User={{ ds_owner }}
Group={{ ds_group }}
Type=forking
Restart=always
TimeoutSec=5min
IgnoreSIGPIPE=no
KillMode=process
GuessMainPID=no
RemainAfterExit=yes
Environment=OPENDJ_JAVA_HOME={{ ds_java_home }}
ExecStart={{ ds_home_link }}/bin/start-ds
ExecStop={{ ds_home_link }}/bin/stop-ds

[Install]
WantedBy=multi-user.target
